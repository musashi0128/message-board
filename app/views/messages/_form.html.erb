<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  名前<br />
  <%= f.text_field :name, class: "n-field"  %>
  <br />

  内容<br />
  <%= f.text_area :body, class: "n-area", size: "40x5" %>
  <br />
  <%= f.submit class: "btn btn-sm btn-primary s-submit" %>
<% end %>